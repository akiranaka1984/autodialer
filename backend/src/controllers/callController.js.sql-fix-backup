const logger = require('../services/logger');
const callService = require('../services/callService');
const db = require('../services/database');

// ãƒ†ã‚¹ãƒˆç™ºä¿¡
exports.testCall = async (req, res) => {
  try {
    const { phoneNumber, callerID, mockMode, provider, campaignId } = req.body;
    
    // ãƒ‡ãƒãƒƒã‚°æƒ…å ±ã‚’è¿½åŠ 
    logger.info('ãƒ†ã‚¹ãƒˆç™ºä¿¡ãƒªã‚¯ã‚¨ã‚¹ãƒˆå—ä¿¡:', {
      phoneNumber,
      callerID,
      mockMode,
      provider,
      campaignId,
      ç’°å¢ƒå¤‰æ•°_MOCK_ASTERISK: process.env.MOCK_ASTERISK,
      ç’°å¢ƒå¤‰æ•°_MOCK_SIP: process.env.MOCK_SIP,
      ç’°å¢ƒå¤‰æ•°_DEFAULT_CALL_PROVIDER: process.env.DEFAULT_CALL_PROVIDER
    });
    
    if (!phoneNumber) {
      return res.status(400).json({ message: 'ç™ºä¿¡å…ˆé›»è©±ç•ªå·ã¯å¿…é ˆã§ã™' });
    }
    
    // ç™ºä¿¡è€…ç•ªå·ã®æ¤œè¨¼ï¼ˆæŒ‡å®šã•ã‚ŒãŸå ´åˆï¼‰
    let callerIdData = null;
    if (callerID) {
      try {
        // db.queryã®çµæœã‚’[rows, fields]ã¨ã—ã¦å—ã‘å–ã‚‹
        const results = await db.query('SELECT * FROM caller_ids WHERE id = ? AND active = true', [callerID]);
        const callerIds = results[0]; // æœ€åˆã®è¦ç´ ãŒè¡Œãƒ‡ãƒ¼ã‚¿ã®é…åˆ—
        
        if (!callerIds || callerIds.length === 0) {
          return res.status(400).json({ message: 'é¸æŠã•ã‚ŒãŸç™ºä¿¡è€…ç•ªå·ãŒè¦‹ã¤ã‹ã‚‰ãªã„ã‹ç„¡åŠ¹ã§ã™' });
        }
        
        callerIdData = callerIds[0];
      } catch (dbError) {
        logger.error('ç™ºä¿¡è€…ç•ªå·ãƒ‡ãƒ¼ã‚¿å–å¾—ã‚¨ãƒ©ãƒ¼:', dbError);
        return res.status(500).json({ message: 'ãƒ‡ãƒ¼ã‚¿ãƒ™ãƒ¼ã‚¹ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸ' });
      }
    }
    
    // ã‚­ãƒ£ãƒ³ãƒšãƒ¼ãƒ³ã®éŸ³å£°ãƒ•ã‚¡ã‚¤ãƒ«ã‚’å–å¾—
    let campaignAudio = null;
    if (campaignId) {
      try {
        const audioService = require('../services/audioService');
        campaignAudio = await audioService.getCampaignAudio(campaignId);
        
        if (campaignAudio && campaignAudio.length > 0) {
          logger.info(`ãƒ†ã‚¹ãƒˆç™ºä¿¡ã§ã‚­ãƒ£ãƒ³ãƒšãƒ¼ãƒ³ ${campaignId} ã®éŸ³å£°ãƒ•ã‚¡ã‚¤ãƒ«å–å¾—: ${campaignAudio.length}ä»¶`);
        } else {
          logger.info(`ãƒ†ã‚¹ãƒˆç™ºä¿¡ã§ã‚­ãƒ£ãƒ³ãƒšãƒ¼ãƒ³ ${campaignId} ã«éŸ³å£°ãƒ•ã‚¡ã‚¤ãƒ«ãŒè¨­å®šã•ã‚Œã¦ã„ã¾ã›ã‚“`);
        }
      } catch (audioError) {
        logger.warn('ãƒ†ã‚¹ãƒˆç™ºä¿¡ã§ã®éŸ³å£°ãƒ•ã‚¡ã‚¤ãƒ«å–å¾—ã‚¨ãƒ©ãƒ¼:', audioError.message);
        // éŸ³å£°ãªã—ã§ç¶šè¡Œ
      }
    }
    
    // ç™ºä¿¡ãƒ‘ãƒ©ãƒ¡ãƒ¼ã‚¿ã®è¨­å®š
    const params = {
      phoneNumber,
      callerID: callerIdData 
        ? `"${callerIdData.description || ''}" <${callerIdData.number}>` 
        : process.env.DEFAULT_CALLER_ID || '"Auto Dialer" <03-5946-8520>',
      context: 'autodialer',
      exten: 's',
      priority: 1,
      variables: {
        CAMPAIGN_ID: campaignId || 'TEST',
        CONTACT_ID: 'TEST',
        CONTACT_NAME: 'ãƒ†ã‚¹ãƒˆãƒ¦ãƒ¼ã‚¶ãƒ¼',
        COMPANY: 'ãƒ†ã‚¹ãƒˆä¼šç¤¾'
      },
      callerIdData,
      mockMode,
      provider,
      campaignAudio
    };
    
    logger.info(`ãƒ†ã‚¹ãƒˆç™ºä¿¡å®Ÿè¡Œ: ç™ºä¿¡å…ˆ=${phoneNumber}, ãƒ¢ãƒ¼ãƒ‰=${mockMode ? 'mock' : 'é€šå¸¸'}, æŒ‡å®šãƒ—ãƒ­ãƒã‚¤ãƒ€=${provider || 'è‡ªå‹•é¸æŠ'}, ã‚­ãƒ£ãƒ³ãƒšãƒ¼ãƒ³=${campaignId || 'ãªã—'}, éŸ³å£°ãƒ•ã‚¡ã‚¤ãƒ«=${campaignAudio ? campaignAudio.length : 0}ä»¶`);
    
    try {
      // çµ±åˆã‚³ãƒ¼ãƒ«ã‚µãƒ¼ãƒ“ã‚¹ã§ç™ºä¿¡
      const result = await callService.originate(params);
      
      // é€šè©±ãƒ­ã‚°ã«è¨˜éŒ²
      try {
        const [logResult] = await db.query(`
          INSERT INTO call_logs 
          (call_id, caller_id_id, phone_number, start_time, status, test_call, call_provider)
          VALUES (?, ?, ?, NOW(), 'ORIGINATING', 1, ?)
        `, [result.ActionID, callerIdData ? callerIdData.id : null, phoneNumber, result.provider]);
      } catch (logError) {
        logger.error('é€šè©±ãƒ­ã‚°è¨˜éŒ²ã‚¨ãƒ©ãƒ¼:', logError);
        // ã‚¨ãƒ©ãƒ¼ã¯ã‚¹ãƒ­ãƒ¼ã›ãšã€å‡¦ç†ã‚’ç¶šè¡Œ
      }
      
      // ç™ºä¿¡çµæœã‚’è¿”ã™
      const responseData = {
        success: true,
        callId: result.ActionID,
        message: `ãƒ†ã‚¹ãƒˆç™ºä¿¡ãŒé–‹å§‹ã•ã‚Œã¾ã—ãŸï¼ˆ${result.provider}${mockMode ? 'ãƒ¢ãƒ¼ãƒ‰' : ''}ï¼‰`,
        data: {
          ...result,
          audioFilesCount: campaignAudio ? campaignAudio.length : 0
        }
      };
      
      // SIPã‚¢ã‚«ã‚¦ãƒ³ãƒˆæƒ…å ±ãŒã‚ã‚‹å ´åˆã¯è¿½åŠ 
      if (result.SipAccount) {
        responseData.sipAccount = result.SipAccount;
      }
      
      res.json(responseData);
      
      // é€šè©±çµ‚äº†ã®ã‚·ãƒŸãƒ¥ãƒ¬ãƒ¼ã‚·ãƒ§ãƒ³ï¼ˆãƒ¢ãƒƒã‚¯ãƒ¢ãƒ¼ãƒ‰ã®å ´åˆï¼‰
      if (mockMode) {
        setTimeout(() => {
          callService.simulateCallEnd(result.ActionID, 'ANSWERED', 10);
        }, 10000);
      }
    } catch (originateError) {
      logger.error('ç™ºä¿¡å‡¦ç†ã‚¨ãƒ©ãƒ¼:', originateError);
      
      return res.status(500).json({ 
        message: 'ãƒ†ã‚¹ãƒˆç™ºä¿¡ã«å¤±æ•—ã—ã¾ã—ãŸ', 
        error: originateError.message,
        isSipError: originateError.message.includes('SIP') || originateError.message.includes('åˆ©ç”¨å¯èƒ½ãªSIPã‚¢ã‚«ã‚¦ãƒ³ãƒˆ')
      });
    }
  } catch (error) {
    logger.error('ãƒ†ã‚¹ãƒˆç™ºä¿¡ã‚¨ãƒ©ãƒ¼:', error);
    res.status(500).json({ 
      message: 'ãƒ†ã‚¹ãƒˆç™ºä¿¡ã«å¤±æ•—ã—ã¾ã—ãŸ', 
      error: error.message,
      isSipError: error.message.includes('SIP') || error.message.includes('åˆ©ç”¨å¯èƒ½ãªSIPã‚¢ã‚«ã‚¦ãƒ³ãƒˆ')
    });
  }
};

// ãƒ¢ãƒƒã‚¯ãƒ¢ãƒ¼ãƒ‰ã§ã®é€šè©±çµ‚äº†ã‚·ãƒŸãƒ¥ãƒ¬ãƒ¼ã‚·ãƒ§ãƒ³
exports.simulateCallEnd = async (callId, status = 'ANSWERED', duration = 10) => {
  setTimeout(async () => {
    try {
      // é€šè©±çµ‚äº†ã‚·ãƒŸãƒ¥ãƒ¬ãƒ¼ã‚·ãƒ§ãƒ³
      await callService.simulateCallEnd(callId, status, duration);
      
      // é€šè©±ãƒ­ã‚°ã‚’æ›´æ–°
      await db.query(`
        UPDATE call_logs
        SET end_time = NOW(), duration = ?, status = ?
        WHERE call_id = ?
      `, [duration, status, callId]);
      
      logger.info(`é€šè©±çµ‚äº†ã‚·ãƒŸãƒ¥ãƒ¬ãƒ¼ã‚·ãƒ§ãƒ³å®Œäº†: callId=${callId}, status=${status}, duration=${duration}`);
    } catch (simulateError) {
      logger.error('ãƒ†ã‚¹ãƒˆç™ºä¿¡ã‚·ãƒŸãƒ¥ãƒ¬ãƒ¼ã‚·ãƒ§ãƒ³ã‚¨ãƒ©ãƒ¼:', simulateError);
    }
  }, 10000);
};

// é€šè©±å±¥æ­´ä¸€è¦§ã‚’å–å¾—ï¼ˆãƒ•ã‚£ãƒ«ã‚¿ãƒ¼ä»˜ãï¼‰
exports.getAllCalls = async (req, res) => {
  try {
    const { campaign, status, dateFrom, dateTo, search, provider, page = 1, limit = 20 } = req.query;
    
    let query = `
      SELECT cl.*, 
             c.phone as contact_phone, c.name as contact_name, c.company as contact_company,
             ca.name as campaign_name,
             ci.number as caller_id_number
      FROM call_logs cl
      LEFT JOIN contacts c ON cl.contact_id = c.id
      LEFT JOIN campaigns ca ON cl.campaign_id = ca.id
      LEFT JOIN caller_ids ci ON cl.caller_id_id = ci.id
      WHERE 1=1
    `;
    
    let countQuery = `
      SELECT COUNT(*) as total
      FROM call_logs cl
      LEFT JOIN contacts c ON cl.contact_id = c.id
      WHERE 1=1
    `;
    
    const params = [];
    const countParams = [];
    
    if (campaign) {
      query += ' AND cl.campaign_id = ?';
      countQuery += ' AND cl.campaign_id = ?';
      params.push(campaign);
      countParams.push(campaign);
    }
    
    if (status) {
      query += ' AND cl.status = ?';
      countQuery += ' AND cl.status = ?';
      params.push(status);
      countParams.push(status);
    }
    
    if (dateFrom) {
      query += ' AND cl.start_time >= ?';
      countQuery += ' AND cl.start_time >= ?';
      params.push(dateFrom);
      countParams.push(dateFrom);
    }
    
    if (dateTo) {
      query += ' AND cl.start_time <= ?';
      countQuery += ' AND cl.start_time <= ?';
      params.push(dateTo + ' 23:59:59');
      countParams.push(dateTo + ' 23:59:59');
    }
    
    if (search) {
      query += ' AND (c.phone LIKE ? OR c.name LIKE ?)';
      countQuery += ' AND (c.phone LIKE ? OR c.name LIKE ?)';
      const searchParam = `%${search}%`;
      params.push(searchParam, searchParam);
      countParams.push(searchParam, searchParam);
    }
    
    // ãƒ—ãƒ­ãƒã‚¤ãƒ€ãƒ•ã‚£ãƒ«ã‚¿ãƒ¼è¿½åŠ 
    if (provider) {
      query += ' AND cl.call_provider = ?';
      countQuery += ' AND cl.call_provider = ?';
      params.push(provider);
      countParams.push(provider);
    }
    
    const offset = (parseInt(page) - 1) * parseInt(limit);
    query += ` ORDER BY cl.start_time DESC LIMIT ${parseInt(limit)} OFFSET ${offset}`;
    
    // db.queryã®çµæœã‚’[rows, fields]ã¨ã—ã¦å—ã‘å–ã‚‹
    const [calls] = await db.query(query, params);
    const [totalResults] = await db.query(countQuery, countParams);
    
    // totalResults[0]ã‚’ä½¿ç”¨
    const total = totalResults[0].total;
    
    res.json({
      calls,
      total,
      page: parseInt(page),
      limit: parseInt(limit),
      totalPages: Math.ceil(total / limit)
    });
  } catch (error) {
    logger.error('é€šè©±å±¥æ­´å–å¾—ã‚¨ãƒ©ãƒ¼:', error);
    res.status(500).json({ message: 'ãƒ‡ãƒ¼ã‚¿ã®å–å¾—ã«å¤±æ•—ã—ã¾ã—ãŸ' });
  }
};

// é€šè©±çµ‚äº†å‡¦ç†ï¼ˆè»¢é€æ©Ÿèƒ½çµ±åˆç‰ˆï¼‰
exports.handleCallEnd = async (req, res) => {
  try {
    const { callId, duration, status, keypress } = req.body;
    
    if (!callId) {
      return res.status(400).json({ message: 'é€šè©±IDãŒå¿…è¦ã§ã™' });
    }
    
    logger.info(`ğŸ“ é€šè©±çµ‚äº†å‡¦ç†é–‹å§‹: CallID=${callId}, Status=${status}, Keypress=${keypress}, Duration=${duration}`);
    
    // çµ±åˆã‚³ãƒ¼ãƒ«ã‚µãƒ¼ãƒ“ã‚¹ã§é€šè©±çµ‚äº†å‡¦ç†
    const callEndResult = await callService.handleCallEnd(callId, duration, status, keypress);
    
    // é€šè©±ãƒ­ã‚°ã‚’æ›´æ–°
    const [result] = await db.query(`
      UPDATE call_logs
      SET end_time = NOW(), 
          duration = ?, 
          status = ?, 
          keypress = ?
      WHERE call_id = ?
    `, [duration || 0, status || 'COMPLETED', keypress, callId]);
    
    if (result.affectedRows === 0) {
      return res.status(404).json({ message: 'é€šè©±ãƒ­ã‚°ãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“' });
    }
    
    // ğŸ”„ ã‚­ãƒ¼ãƒ‘ãƒƒãƒ‰å‡¦ç†ï¼ˆè»¢é€æ©Ÿèƒ½çµ±åˆï¼‰
    const [callInfoResult] = await db.query(`
      SELECT cl.contact_id, cl.campaign_id, cl.phone_number,
             c.phone as customer_phone
      FROM call_logs cl
      LEFT JOIN contacts c ON cl.contact_id = c.id
      WHERE cl.call_id = ?
    `, [callId]);
    
    let transferResult = null;
    
    if (callInfoResult.length > 0 && callInfoResult[0].contact_id) {
      const callInfo = callInfoResult[0];
      const contactId = callInfo.contact_id;
      let contactStatus = 'completed';
      
      if (keypress === '1') {
        // ğŸ”„ ã‚ªãƒšãƒ¬ãƒ¼ã‚¿ãƒ¼è»¢é€å‡¦ç†
        try {
          logger.info(`ğŸ”„ 1ã‚­ãƒ¼æŠ¼ä¸‹ã«ã‚ˆã‚Šè»¢é€é–‹å§‹: CallID=${callId}`);
          
          const customerPhone = callInfo.customer_phone || callInfo.phone_number;
          const campaignId = callInfo.campaign_id;
          
          if (customerPhone && campaignId) {
            // transferServiceãŒå­˜åœ¨ã™ã‚‹å ´åˆã®ã¿å®Ÿè¡Œ
            try {
              const transferService = require('../services/transferService');
              transferResult = await transferService.initiateTransfer(
                callId, 
                customerPhone, 
                campaignId, 
                keypress
              );
              
              logger.info(`âœ… è»¢é€å‡¦ç†å®Œäº†: ${transferResult.transferId}`);
              contactStatus = 'transferred'; // é€£çµ¡å…ˆã‚¹ãƒ†ãƒ¼ã‚¿ã‚¹ã‚’è»¢é€æ¸ˆã¿ã«
              
              // é€šè©±ãƒ­ã‚°ã«è»¢é€æƒ…å ±ã‚’è¿½åŠ 
              await db.query(`
                UPDATE call_logs 
                SET is_transfer = true, transfer_id = ?
                WHERE call_id = ?
              `, [transferResult.transferId, callId]);
              
            } catch (transferServiceError) {
              logger.warn(`transferServiceåˆ©ç”¨ä¸å¯: ${transferServiceError.message}`);
              
              // ãƒ•ã‚©ãƒ¼ãƒ«ãƒãƒƒã‚¯ï¼šç›´æ¥ã‚ªãƒšãƒ¬ãƒ¼ã‚¿ãƒ¼ç•ªå·ã«ç™ºä¿¡
              const operatorNumber = process.env.OPERATOR_NUMBER || '03-5946-8520';
              logger.info(`ğŸ“ ãƒ•ã‚©ãƒ¼ãƒ«ãƒãƒƒã‚¯è»¢é€: ${operatorNumber}ã«ç™ºä¿¡`);
              
              // ç°¡æ˜“è»¢é€ãƒ­ã‚°è¨˜éŒ²
              const transferId = `fallback-${Date.now()}`;
              await db.query(`
                INSERT INTO transfer_logs (transfer_id, original_call_id, customer_phone, operator_number, campaign_id, status, created_at)
                VALUES (?, ?, ?, ?, ?, 'initiated', NOW())
              `, [transferId, callId, customerPhone, operatorNumber, campaignId]);
              
              contactStatus = 'transferred';
              transferResult = { transferId, method: 'fallback', operatorNumber };
            }
          } else {
            logger.warn(`è»¢é€ã«å¿…è¦ãªæƒ…å ±ãŒä¸è¶³: CallID=${callId}`);
            contactStatus = 'completed';
          }
        } catch (transferError) {
          logger.error(`è»¢é€å‡¦ç†ã‚¨ãƒ©ãƒ¼: CallID=${callId}`, transferError);
          contactStatus = 'completed'; // ã‚¨ãƒ©ãƒ¼æ™‚ã¯å®Œäº†æ‰±ã„
        }
      } else if (keypress === '9') {
        contactStatus = 'dnc';
        // DNCãƒªã‚¹ãƒˆã«è¿½åŠ 
        const [contactResult] = await db.query('SELECT phone FROM contacts WHERE id = ?', [contactId]);
        
        if (contactResult.length > 0) {
          await db.query(
            'INSERT IGNORE INTO dnc_list (phone, reason, created_at) VALUES (?, ?, NOW())',
            [contactResult[0].phone, 'ãƒ¦ãƒ¼ã‚¶ãƒ¼ãƒªã‚¯ã‚¨ã‚¹ãƒˆï¼ˆã‚­ãƒ¼ãƒ‘ãƒƒãƒ‰å…¥åŠ›9ï¼‰']
          );
        }
      }
      
      // é€£çµ¡å…ˆã‚¹ãƒ†ãƒ¼ã‚¿ã‚¹æ›´æ–°
      await db.query('UPDATE contacts SET status = ? WHERE id = ?', [contactStatus, contactId]);
    }
    
    res.json({ 
      success: true, 
      message: 'é€šè©±çµ‚äº†ãŒè¨˜éŒ²ã•ã‚Œã¾ã—ãŸ',
      callEndResult,
      keypress,
      transferHandled: keypress === '1',
      transferResult
    });
    
  } catch (error) {
    logger.error('é€šè©±çµ‚äº†å‡¦ç†ã‚¨ãƒ©ãƒ¼:', error);
    res.status(500).json({ message: 'é€šè©±çµ‚äº†ã®å‡¦ç†ã«å¤±æ•—ã—ã¾ã—ãŸ' });
  }
};

// ğŸ”„ è»¢é€ãƒªã‚¯ã‚¨ã‚¹ãƒˆå‡¦ç†ï¼ˆIVR Asteriskã‹ã‚‰ã®ç›´æ¥å‘¼ã³å‡ºã—ç”¨ï¼‰
exports.handleTransferRequest = async (req, res) => {
  try {
    const { callId, customerPhone, campaignId, keypress = '1' } = req.body;
    
    logger.info(`ğŸ”„ è»¢é€ãƒªã‚¯ã‚¨ã‚¹ãƒˆå—ä¿¡: CallID=${callId}, Customer=${customerPhone}, Campaign=${campaignId}`);

    if (!callId || !customerPhone || !campaignId) {
      return res.status(400).json({ 
        message: 'å¿…é ˆãƒ‘ãƒ©ãƒ¡ãƒ¼ã‚¿ãŒä¸è¶³ã—ã¦ã„ã¾ã™ (callId, customerPhone, campaignId)' 
      });
    }

    // é€šè©±æƒ…å ±ã‚’å–å¾—
    const [callInfo] = await db.query(`
      SELECT cl.contact_id, cl.campaign_id, c.phone, c.name, ca.name as campaign_name
      FROM call_logs cl
      LEFT JOIN contacts c ON cl.contact_id = c.id  
      LEFT JOIN campaigns ca ON cl.campaign_id = ca.id
      WHERE cl.call_id = ?
    `, [callId]);

    let transferResult;

    try {
      // transferServiceã‚’è©¦è¡Œ
      const transferService = require('../services/transferService');
      transferResult = await transferService.initiateTransfer(
        callId,
        customerPhone,
        campaignId,
        keypress
      );
    } catch (transferServiceError) {
      logger.warn(`transferServiceåˆ©ç”¨ä¸å¯ã€ãƒ•ã‚©ãƒ¼ãƒ«ãƒãƒƒã‚¯å®Ÿè¡Œ: ${transferServiceError.message}`);
      
      // ãƒ•ã‚©ãƒ¼ãƒ«ãƒãƒƒã‚¯å‡¦ç†
      const operatorNumber = process.env.OPERATOR_NUMBER || '03-5946-8520';
      const transferId = `fallback-${Date.now()}`;
      
      // ç°¡æ˜“è»¢é€ãƒ­ã‚°è¨˜éŒ²
      await db.query(`
        INSERT INTO transfer_logs (transfer_id, original_call_id, customer_phone, operator_number, campaign_id, status, created_at)
        VALUES (?, ?, ?, ?, ?, 'initiated', NOW())
      `, [transferId, callId, customerPhone, operatorNumber, campaignId]);
      
      transferResult = { 
        transferId, 
        method: 'fallback', 
        operatorNumber,
        message: `ã‚ªãƒšãƒ¬ãƒ¼ã‚¿ãƒ¼ ${operatorNumber} ã«è»¢é€ã‚’é–‹å§‹ã—ã¾ã—ãŸï¼ˆãƒ•ã‚©ãƒ¼ãƒ«ãƒãƒƒã‚¯ï¼‰`
      };
    }

    // é€šè©±ãƒ­ã‚°ã«è»¢é€æƒ…å ±ã‚’è¨˜éŒ²
    await db.query(`
      UPDATE call_logs 
      SET status = 'TRANSFERRED', 
          keypress = ?,
          end_time = NOW(),
          is_transfer = true,
          transfer_id = ?
      WHERE call_id = ?
    `, [keypress, transferResult.transferId, callId]);

    // é€£çµ¡å…ˆã‚¹ãƒ†ãƒ¼ã‚¿ã‚¹ã‚’è»¢é€æ¸ˆã¿ã«æ›´æ–°
    if (callInfo.length > 0 && callInfo[0].contact_id) {
      await db.query('UPDATE contacts SET status = ? WHERE id = ?', ['transferred', callInfo[0].contact_id]);
    }

    res.json({
      success: true,
      message: transferResult.message || 'ã‚ªãƒšãƒ¬ãƒ¼ã‚¿ãƒ¼ã«è»¢é€ã‚’é–‹å§‹ã—ã¾ã—ãŸ',
      transferId: transferResult.transferId,
      customerPhone: customerPhone,
      campaignId: campaignId,
      method: transferResult.method || 'normal'
    });

  } catch (error) {
    logger.error('è»¢é€ãƒªã‚¯ã‚¨ã‚¹ãƒˆå‡¦ç†ã‚¨ãƒ©ãƒ¼:', error);
    res.status(500).json({ 
      message: 'è»¢é€å‡¦ç†ã«å¤±æ•—ã—ã¾ã—ãŸ',
      error: error.message 
    });
  }
};

// è»¢é€çŠ¶æ³å–å¾—API
exports.getTransferStatus = async (req, res) => {
  try {
    const { transferId } = req.params;
    
    if (!transferId) {
      return res.status(400).json({ message: 'è»¢é€IDãŒå¿…è¦ã§ã™' });
    }

    // ãƒ‡ãƒ¼ã‚¿ãƒ™ãƒ¼ã‚¹ã‹ã‚‰è»¢é€ãƒ­ã‚°ã‚’å–å¾—
    const [transferLogs] = await db.query(`
      SELECT 
        tl.*,
        ca.name as campaign_name,
        c.name as customer_name
      FROM transfer_logs tl
      LEFT JOIN campaigns ca ON tl.campaign_id = ca.id
      LEFT JOIN contacts c ON tl.customer_phone = c.phone
      WHERE tl.transfer_id = ?
    `, [transferId]);

    if (transferLogs.length === 0) {
      return res.status(404).json({ message: 'è»¢é€æƒ…å ±ãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“' });
    }

    const transferLog = transferLogs[0];

    // transferServiceãŒåˆ©ç”¨å¯èƒ½ãªå ´åˆã¯ãƒªã‚¢ãƒ«ã‚¿ã‚¤ãƒ çŠ¶æ…‹ã‚‚å–å¾—
    try {
      const transferService = require('../services/transferService');
      const liveStatus = transferService.getTransferStatus(transferId);
      
      if (liveStatus.found) {
        transferLog.liveStatus = liveStatus;
      }
    } catch (serviceError) {
      // transferServiceãŒåˆ©ç”¨ã§ããªã„å ´åˆã¯ãƒ‡ãƒ¼ã‚¿ãƒ™ãƒ¼ã‚¹æƒ…å ±ã®ã¿
      logger.debug('transferServiceåˆ©ç”¨ä¸å¯ã€ãƒ‡ãƒ¼ã‚¿ãƒ™ãƒ¼ã‚¹æƒ…å ±ã®ã¿è¿”å´');
    }

    res.json({
      success: true,
      transfer: transferLog
    });

  } catch (error) {
    logger.error('è»¢é€çŠ¶æ³å–å¾—ã‚¨ãƒ©ãƒ¼:', error);
    res.status(500).json({ message: 'è»¢é€çŠ¶æ³ã®å–å¾—ã«å¤±æ•—ã—ã¾ã—ãŸ' });
  }
};

// å…¨è»¢é€çŠ¶æ³å–å¾—APIï¼ˆç®¡ç†ç”»é¢ç”¨ï¼‰
exports.getAllTransfers = async (req, res) => {
  try {
    // ãƒ‡ãƒ¼ã‚¿ãƒ™ãƒ¼ã‚¹ã‹ã‚‰è»¢é€ãƒ­ã‚°ã‚’å–å¾—
    const [transferLogs] = await db.query(`
      SELECT 
        tl.*,
        ca.name as campaign_name,
        c.name as customer_name
      FROM transfer_logs tl
      LEFT JOIN campaigns ca ON tl.campaign_id = ca.id
      LEFT JOIN contacts c ON tl.customer_phone = c.phone
      ORDER BY tl.created_at DESC
      LIMIT 50
    `);

    let activeTransfers = [];

    // transferServiceãŒåˆ©ç”¨å¯èƒ½ãªå ´åˆã¯ã‚¢ã‚¯ãƒ†ã‚£ãƒ–è»¢é€ã‚‚å–å¾—
    try {
      const transferService = require('../services/transferService');
      activeTransfers = transferService.getAllTransferStatus();
    } catch (serviceError) {
      logger.debug('transferServiceåˆ©ç”¨ä¸å¯ã€ãƒ‡ãƒ¼ã‚¿ãƒ™ãƒ¼ã‚¹æƒ…å ±ã®ã¿è¿”å´');
    }

    res.json({
      success: true,
      activeTransfers: activeTransfers,
      transferHistory: transferLogs || []
    });

  } catch (error) {
    logger.error('å…¨è»¢é€çŠ¶æ³å–å¾—ã‚¨ãƒ©ãƒ¼:', error);
    res.status(500).json({ message: 'è»¢é€çŠ¶æ³ã®å–å¾—ã«å¤±æ•—ã—ã¾ã—ãŸ' });
  }
};    

// ãƒ—ãƒ­ãƒã‚¤ãƒ€ã®ã‚¹ãƒ†ãƒ¼ã‚¿ã‚¹å–å¾—
exports.getProvidersStatus = async (req, res) => {
  try {
    const providersStatus = callService.getProvidersStatus();
    
    res.json({
      providers: providersStatus,
      defaultProvider: callService.defaultProvider,
      enableFallback: callService.enableFallback,
      enableLoadBalancing: callService.enableLoadBalancing
    });
  } catch (error) {
    logger.error('ãƒ—ãƒ­ãƒã‚¤ãƒ€ã‚¹ãƒ†ãƒ¼ã‚¿ã‚¹å–å¾—ã‚¨ãƒ©ãƒ¼:', error);
    res.status(500).json({ message: 'ãƒ—ãƒ­ãƒã‚¤ãƒ€ã‚¹ãƒ†ãƒ¼ã‚¿ã‚¹ã®å–å¾—ã«å¤±æ•—ã—ã¾ã—ãŸ' });
  }
};
